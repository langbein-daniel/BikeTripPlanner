{
  "logger": {
    "level": "debug",
    "timestamp": false
  },
  "esclient": {
    "apiVersion": "7.5",
    "hosts": [
      {
        "host": "elasticsearch"
      }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "api": {
    "services": {
      "pip": {
        "url": "http://pip:4200"
      },
      "libpostal": {
        "url": "http://libpostal:4400"
      },
      "placeholder": {
        "url": "http://placeholder:4100"
      },
      "interpolation": {
        "url": "http://interpolation:4300"
      }
    },
    "targets": {
      "auto_discover_required": true
    }
  },
  "imports": {
    "adminLookup": {
      "enabled": true
    },
    "openstreetmap": {
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [
        {
          "filename": "extract.osm.pbf",
          "importVenues": true
        }
      ]
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [
        "extract.0sv"
      ]
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "countryCode": "DE"
    }
  }
}
